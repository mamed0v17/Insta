<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/containerLin"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content">


    <ImageView
        android:id="@+id/oval_iv"
        android:layout_marginStart="10dp"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/girl"/>

        <TextView
            android:id="@+id/liked_tv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            tools:text="karenne liked your photo."
            android:textColor="@color/black"
            android:textSize="18sp"
            android:gravity="center"
            android:layout_marginStart="15dp"/>'

        <TextView
            android:id="@+id/timeLiked_tv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            tools:text="1h"
            android:textSize="18sp"
            android:gravity="center"/>

        <ImageView
            android:id="@+id/liked_photo_iv"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:src="@drawable/profile_img"
            android:layout_marginStart="15dp"/>

    </LinearLayout>

    <TextView
        app:layout_constraintTop_toBottomOf="@+id/containerLin"
        android:background="@color/black"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

    <TextView
        app:layout_constraintBottom_toTopOf="@+id/containerLin"
        android:background="@color/black"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>




</androidx.constraintlayout.widget.ConstraintLayout>